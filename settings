#!/bin/bash

export O_WD="${PWD}"

export O_PLATFORM="${O_PLATFORM:-"desktop"}"
export O_RESOURCES_PATH="${O_WD}/${O_RESOURCES_PATH:-"resources"}"

export O_TARGETS_ROOT="${O_TARGETS_ROOT:-"root"}"
export O_TARGETS_ROOT_PATH="${O_RESOURCES_PATH}/${O_TARGETS_ROOT}"

export O_TARGETS_USER="${O_TARGETS_USER:-"user"}"
export O_TARGETS_USER_PATH="${O_RESOURCES_PATH}/${O_TARGETS_USER}"

export O_SOFTWARE_LIST="setup/${O_SOFTWARE_LIST:-"xbps"}"
export O_SOFTWARE_LIST_PATH="${O_RESOURCES_PATH}/${O_SOFTWARE_LIST}.list"

export O_SOFTWARE_PLATFORM_LIST="${O_SOFTWARE_LIST}-${O_PLATFORM}"
export O_SOFTWARE_PLATFORM_LIST_PATH="${O_RESOURCES_PATH}/${O_SOFTWARE_PLATFORM_LIST}.list"
