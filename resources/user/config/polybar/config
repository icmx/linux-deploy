[colors]
  background     = #0c0c0d
  background-alt = #252526
  foreground     = #b6c2c3
  foreground-alt = #555
  primary        = #ffb52a
  secondary      = #e60053
  alert          = #bd2c40

[settings]
  screenchange-reload = true

[global/wm]
  margin-top = 0
  margin-bottom = 0

[bar/base]
 #monitor = ???
  width = 100%
  height = 28
  radius = 0
  fixed-center = true

  background = ${colors.background}
  foreground = ${colors.foreground}

  line-color = #f00

  border-size = 0
  border-color = #00000000

  padding-left = 0
  padding-right = 0

  module-margin-left = 2
  module-margin-right = 2

  font-0 = DejaVuSans:fontformat=truetype:size=10:antialias=true;0
  font-1 = MaterialIcons:fontformat=truetype:size=8:antialias=true;0

  modules-left = bspwm daysleft
  modules-center = xwindow
  modules-right = volume xkeyboard date

  tray-position = right
  tray-padding = 0

  wm-name = bspwm
  wm-restack = bspwm

[bar/desktop]
  monitor = HDMI1
  inherit = bar/base

  modules-left = bspwm daysleft
  modules-center = xwindow
  modules-right = volume-desktop xkeyboard date

[bar/laptop]
  monitor = eDP1
  inherit = bar/base

  modules-left = bspwm daysleft
  modules-center = xwindow
  modules-right = volume-laptop battery xkeyboard date

[module/bspwm]
  type = internal/bspwm

  label-focused = %index%
  label-focused-background = ${colors.background-alt}
  label-focused-padding = 2

  label-occupied = %index%
  label-occupied-padding = 2

  label-urgent =%index%
  label-urgent-padding = 2
#  label-urgent-background = ${colors.alert}

  label-empty = %index%
  label-empty-padding = 2
  label-empty-foreground = ${colors.foreground-alt}


[module/xwindow]
  type = internal/xwindow
  label = %title:0:48:…%


[module/xkeyboard]
  type = internal/xkeyboard
  blacklist-0 = num lock
  blacklist-1 = caps lock
  blacklist-2 = scroll lock

  label-layout = %layout%
  label-layout-underline = ${colors.secondary}


[module/date]
  type = internal/date
  label = %date% %time%

  interval = 5

  date = "2007-%m-%d "
  date-alt = "%B %e, 2007"

  time = "%H:%M, %A"
  time-alt = "%H:%M, %A"


[module/volume-base]
  type = internal/volume
 #master-soundcard = ???
  mapped = true

  format-volume = <ramp-volume> <label-volume>
  format-muted = <label-muted>

  label-volume = %percentage%%
  label-volume-foreground = ${root.foreground}

  label-muted =  %percentage%%
  label-muted-foreground = ${colors.foreground-alt}

  ramp-volume-0 = 
  ramp-volume-1 = 
  ramp-volume-2 = 
  ramp-volume-3 = 
  ramp-volume-4 = 
  ramp-volume-5 = 
  ramp-volume-6 = 
  ramp-volume-7 = 
  ramp-volume-8 = 
  ramp-volume-9 = 

[module/volume-desktop]
  inherit = module/volume-base
  type = internal/volume
  master-soundcard = hw:0

[module/volume-laptop]
  inherit = module/volume-base
  type = internal/volume
  master-soundcard = hw:1

