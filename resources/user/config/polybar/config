[colors]
  background = #0c0c0d
  foreground = #b6c2c3
  white-a    = #cccccc
  white-b    = #9eacae
  red-a      = #b14d4c
  red-b      = #e7504e
  green-a    = #438064
  green-b    = #4ea272
  blue-a     = #2564c6
  blue-b     = #517292
  cyan-a     = #568081
  cyan-b     = #2b6d6e
  magenta-a  = #754e80
  magenta-b  = #8e6e9d
  yellow-a   = #f0e12b
  yellow-b   = #a6a84e
  black-a    = #242424
  black-b    = #474747

[settings]
  screenchange-reload = true

[global/wm]
  margin-top    = 0
  margin-bottom = 0

[bar/base]
  width               = 100%
  height              = 28
  radius              = 0
  background          = ${colors.background}
  foreground          = ${colors.foreground}
  fixed-center        = true
  padding-left        = 0
  padding-right       = 0
  module-margin-left  = 2
  module-margin-right = 2
  font-0              = DejaVuSans:size=10:antialias=true;0
  font-1              = MaterialIcons:size=8:antialias=true;0
  tray-position       = right
  tray-padding        = 0
  tray-transparent    = false
  wm-name             = bspwm
  wm-restack          = bspwm

[bar/desktop]
  monitor        = HDMI1
  inherit        = bar/base

  modules-left   = bspwm daysleft
  modules-center = xwindow
  modules-right  = volume-desktop xkeyboard date

[bar/laptop]
  monitor        = eDP1
  inherit        = bar/base

  modules-left   = bspwm bspwm-nodecontrol daysleft
  modules-center = xwindow
  modules-right  = volume-laptop battery xkeyboard date

[module/bspwm]
  type                     = internal/bspwm

  label-focused            = %index%
  label-focused-foreground = ${colors.foreground}
  label-focused-background = ${colors.blue-b}
  label-focused-padding    = 2

  label-occupied           = %index%
  label-occupied-padding   = 2

  label-urgent             = %index%
  label-urgent-foreground  = ${colors.foreground}
  label-urgent-background  = ${colors.red-b}
  label-urgent-padding     = 2

  label-empty              = %index%
  label-empty-foreground   = ${colors.black-b}
  label-empty-background   = ${colors.background}
  label-empty-padding      = 2


[module/xwindow]
  type  = internal/xwindow
  label = %title:0:48:…%


[module/xkeyboard]
  type         = internal/xkeyboard
  label-layout = %layout%
  blacklist-0  = num lock
  blacklist-1  = caps lock
  blacklist-2  = scroll lock


[module/date]
  type     = internal/date
  label    = %date% %time%
  interval = 5

  date     = 2007-%m-%d
  time     = %H:%M, %A

  date-alt = %B %e, 2007
  time-alt = %H:%M, %A


[module/volume-base]
  type          = internal/volume
  mapped        = true

  label-volume  = %percentage%%
  format-volume = <ramp-volume> <label-volume>

  label-muted   =  %percentage%%
  format-muted  = <label-muted>

  ramp-volume-0 = 
  ramp-volume-1 = 
  ramp-volume-2 = 
  ramp-volume-3 = 
  ramp-volume-4 = 
  ramp-volume-5 = 
  ramp-volume-6 = 
  ramp-volume-7 = 
  ramp-volume-8 = 
  ramp-volume-9 = 

[module/volume-desktop]
  inherit          = module/volume-base
  type             = internal/volume
  master-soundcard = hw:0

[module/volume-laptop]
  inherit          = module/volume-base
  type             = internal/volume
  master-soundcard = hw:1

